@model SocialNetworkWeb.ViewModels.Account.SearchViewModel

<div class="block-reg background-white">
    @if (Model.UserList.Count !=0)
    {
        @foreach (var user in @Model.UserList)
        {
            <div class="search-result-item">
                <img src="@user.Image" alt="@user.FirstName @user.LastName" class="search-result-image" />
                <div class="search-result-info">
                <h5>@user.GetFullName()</h5>
                <label>@user.Status</label>
                <label>@user.About</label>
                @if (!user.IsFriendWithCurrent)
                {
                    <form asp-controller="AccountManager" asp-action="AddFriend" asp-route-id="@user.Id" method="post">
                        <button type ="submit" class="btn btn-sm btn-primary">
                            Добавить в друзья
                        </button>
                    </form>
                }
                </div>
            </div>
        }
    }
    else
    {
        <label>Поиск не дал результата.</label>
    }
</div>